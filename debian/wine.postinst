#!/bin/sh -e

. /usr/share/debconf/confmodule

if [ "$1" = "configure" ] ; then
  if [ -e /etc/wine.conf ]; then
    db_get wine/del_wine_conf
    if [ "$RET" = "true" ]; then
      rm -f /etc/wine.conf
    fi
  fi

  if [ -x /usr/sbin/update-binfmts ]; then
    /usr/sbin/update-binfmts --import wine || true
  fi
fi

