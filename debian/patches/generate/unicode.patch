+    printf OUTPUT "    /* values */\n%s\n};\n", dump_array( 16, 0, @array[256..$#array] );
+    printf OUTPUT "\n#endif /* __ASM_OBSOLETE */\n";
+
+    close OUTPUT;
+    save_file($filename);
+}
 
